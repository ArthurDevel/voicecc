{
  "name": "voicecc",
  "version": "1.0.10",
  "description": "Voice mode plugin for Claude Code -- hands-free interaction via local STT/TTS/VAD",
  "type": "module",
  "bin": {
    "voicecc": "bin/voicecc.js"
  },
  "scripts": {
    "start": "tsx run.ts",
    "dev:dashboard": "cd dashboard && npx vite",
    "build:dashboard": "cd dashboard && npx vite build",
    "prepublishOnly": "npm run build:dashboard",
    "postinstall": "echo '\\n========================================\\n            VOICECC INSTALLED\\n========================================\\n\\n  Run voicecc to start the dashboard.\\n' >&2"
  },
  "files": [
    "bin/",
    "run.ts",
    "sidecar/",
    "services/",
    "dashboard/dist/",
    "dashboard/server.ts",
    "dashboard/routes/",
    "scripts/",
    "init/",
    "skills/",
    ".claude-plugin/",
    "tsconfig.json"
  ],
  "os": [
    "darwin"
  ],
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "@hono/node-server": "^1.19.9",
    "avr-vad": "^1.0.0",
    "dotenv": "^16.4.0",
    "hono": "^4.12.0",
    "node-record-lpcm16": "^1.0.1",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "sherpa-onnx-node": "^1.11.0",
    "twilio": "^5.0.0",
    "ws": "^8.18.0",
    "tsx": "^4.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^5.1.4",
    "typescript": "^5.7.0",
    "vite": "^7.3.1"
  }
}
